@model DataLayer.Reservation

@{
    ViewBag.Title = "Информация о заказе";
}


<legend>Информация о заказе</legend>
<form class="form-horizontal" role="form">
    <input type="hidden" name="id" value="@Model.Id">
    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-2 control-label">Reservation number</label>
        <div class="col-sm-3">
            @Model.ReservationNumber
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-2 control-label">Period</label>
        <div class="col-sm-3">
            @Model.Period
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-2 control-label">День прибытия</label>
        <div class="col-sm-3">
            @Model.DepartureDay
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-2 control-label">Имя</label>
        <div class="col-sm-3">
            @Model.FirstName
        </div>
    </div>

    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-2 control-label">Цена</label>
        <div class="col-sm-3">
            @((Model.Price != null) ? Model.Price : string.Empty)
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-2 control-label">Питание</label>
        <div class="col-sm-3">
            @((Model.Food != null) ? Model.Food : string.Empty)
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-2 control-label">Тип тура</label>
        <div class="col-sm-3">
            @((Model.TourType != null) ? Model.TourType : string.Empty)
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-2 control-label">Расположение</label>
        <div class="col-sm-3">
            @((Model.Location != null) ? Model.Location : string.Empty)
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-2 control-label">Телефон</label>
        <div class="col-sm-3">
            @((Model.Phone != null) ? Model.Phone : string.Empty)
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-3">
            @((Model.Email != null) ? Model.Email : string.Empty)
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-2 control-label">Дети</label>
        <div class="col-sm-3">
            @((Model.Children != null) ? Model.Children : 0)
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-2 control-label">Категория отеля</label>
        <div class="col-sm-3">
            @((Model.HotelCategory != null) ? Model.HotelCategory : "не выбрано")
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-2 control-label">Страна</label>
        <div class="col-sm-3">
            @((Model.Country != null) ? Model.Country : "не выбрано")
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-2 control-label">Места, где отдыхали раньше</label>
        <div class="col-sm-3">
            @((Model.PastPlace != null) ? Model.PastPlace : "не выбрано")
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-2 control-label">Бюджет</label>
        <div class="col-sm-3">
            @((Model.Finance != null) ? Model.Finance : "не выбрано")
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-2 control-label">Комментарий</label>
        <div class="col-sm-3">
            @((Model.Comment != null) ? Model.Comment : "не выбрано")
        </div>
    </div>
    @Html.ActionLink("Cancel Reservation", "DeleteReservations", "Admin", new { reservationId = Model.Id }, new { @style = "text-transform:capitalize; text-decoration:none; color: red;" })
    @Html.ActionLink("Update Reservation Info", "UpdateReservation", new { reservationId = Model.Id }, new { @style = "text-transform:capitalize; text-decoration:none; color: green;" })
</form>
