@model TourSite2.Models.SubModel

<style type="text/css">
    .order_form {
        margin-left: 50px;
        margin-top: 20px;
        margin-bottom: 20px;
    }
</style>

@using (Html.BeginForm("SendEmail", "Subscribe", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
@Html.ValidationSummary(true)
     <legend>Оформление подписки</legend>
<form class="form-horizontal" role="form">
   
    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-2 control-label">Имя</label>
        <div class="col-sm-3">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Полное имя", tabindex = 1 })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge2" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-3">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", tabindex = 2 })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge3" class="col-sm-2 control-label">Телефон</label>
        <div class="col-sm-3">
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Телефон", tabindex = 3 })
            @Html.ValidationMessageFor(m => m.Phone)
        </div>
    </div>
 
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success btn-lg">Отправить</button>
        </div>
    </div>
</form>
}

