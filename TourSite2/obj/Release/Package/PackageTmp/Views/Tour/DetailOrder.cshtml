@model DataLayer.HotTours
@{
    ViewBag.Title = "DetailOrder";
}
@using (Html.BeginForm("AddToCart", "Tour", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <legend>Оформление тура</legend>
    <form class="form-horizontal" role="form">
        <input type="hidden" name="id" value="@Model.Id">
        <div class="form-group">
            <label for="formGroupInputLarge1" class="col-sm-2 control-label">Имя</label>
            <div class="col-sm-3">
                 <input type="text" placeholder="Имя" name="Name">
            </div>
        </div>
        <div class="form-group">
            <label for="formGroupInputLarge1" class="col-sm-2 control-label">Email</label>

            <div class="col-sm-3">
                <input type="text" placeholder="Email" name="mail_adress">
            </div>
        </div>

        <div class="form-group">
            <label for="formGroupInputLarge1" class="col-sm-2 control-label">Телефон</label>

            <div class="col-sm-3">
                <input type="text" placeholder="Телефон" name="Phone">
            </div>
        </div>
        <div class="form-group">
            <label for="formGroupInputLarge1" class="col-sm-2 control-label">Комментарий</label>
            <div class="col-sm-3">
                <textarea rows="10" cols="45" placeholder="Ваши пожелания" name="Comment"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success btn-lg">Отправить</button>
            </div>
        </div>
    </form>

}
