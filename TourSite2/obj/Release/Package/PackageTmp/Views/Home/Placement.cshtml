@model IEnumerable<DataLayer.Placement>

@{
    ViewBag.Title = "Admin: All Products";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>All Products</h1>
<table class="Grid">
    <tr>
        <th>ID</th>
        <th>Name</th>


    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>

            <td>@Html.ActionLink(item.Name, "EditPlacement", new { item.Id })</td>

            <td>
                @using (Html.BeginForm("DeleteAbout", "Home"))
                {
                    @Html.Hidden("CountryId", item.Id)
                    <input type="submit" value="Delete" />
                }
            </td>

        </tr>
    }
</table>
