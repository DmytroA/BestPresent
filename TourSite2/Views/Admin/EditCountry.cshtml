@model DataLayer.Country

@{
 
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit @Model.Name</h1>
@using (Html.BeginForm("EditCountry", "Admin",
  FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.EditorForModel()
    <div class="editor-label">Image</div>
    <div class="editor-field">
        @if (Model.ImageData == null)
        {

            @:None
         }
        else
        {
            <img width="150" height="150" src="@Url.Action("GetImageCountry", "Tour", new { Model.Id })" />
        }
        <div>
            Upload new image:
            <input type="file" name="Image" />
        </div>
        <script>
            CKEDITOR.replace('Description');
        </script>

    </div>

    <input type="submit" value="Save" />
    @Html.ActionLink("Cancel and return to List", "Index")
}

<p>@Html.ActionLink("Главная страница", "Index", "Home")</p>

<p>@Html.ActionLink("Админка", "Index")</p>