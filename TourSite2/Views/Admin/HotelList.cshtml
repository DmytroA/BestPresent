@model List<DataLayer.Hotel>
@{

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Все страны</h1>
<table class="Grid">
    <tr>
        <th>ID</th>
        <th>Hotel</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>

            <td>@Html.ActionLink(item.Name, "EditHotel", new { item.Id })</td>

            <td>
                @using (Html.BeginForm("DeleteHotels", "Admin"))
                {
                    @Html.Hidden("HotelId", item.Id)
                    <input type="submit" value="Delete" />
                }
            </td>

        </tr>
    }
</table>
<p>@Html.ActionLink("Добавить отель", "CreateHotel")</p>
<p>@Html.ActionLink("Главная страница", "Index", "Home")</p>

<p>@Html.ActionLink("Админка", "Index")</p>