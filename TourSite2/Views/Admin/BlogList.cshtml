@model List<DataLayer.Blog>
    @{

        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

    <h1>Все страны</h1>
    <table class="Grid">
        <tr>
            <th>ID</th>
            <th>Post</th>

            <th>Actions</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>

                <td>@Html.ActionLink(item.Name, "EditBlogPost", new { item.Id })</td>

                <td>
                    @using (Html.BeginForm("DeleteBlogPost", "Admin"))
                    {
                        @Html.Hidden("BlogId", item.Id)
                        <input type="submit" value="Delete" />
                    }
                </td>

            </tr>
        }
    </table>
    <p>@Html.ActionLink("Добавить запись", "CreateBlog")</p>
    <p>@Html.ActionLink("Главная страница", "Index", "Home")</p>

    <p>@Html.ActionLink("Админка", "Index")</p>
