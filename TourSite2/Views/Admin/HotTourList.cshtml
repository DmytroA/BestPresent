@model IEnumerable<DataLayer.HotTours>

@{
    ViewBag.Title = "Admin: Горящие туры";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Все туры</h1>
<table class="Grid">
    <tr>
        <th>ID</th>
        <th>Country</th>
        <th class="NumericCol">Price</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>

            <td>@Html.ActionLink(item.Hotel.Resort.Country.Name, "Edit", new { item.Id })</td>
            <td class="NumericCol">@item.Price</td>
            <td>
                @using (Html.BeginForm("Delete", "Admin"))
                {
                    @Html.Hidden("TourId", item.Id)
                    <input type="submit" value="Delete" />
                }
            </td>

        </tr>
    }
</table>

<p>@Html.ActionLink("Добавить тур", "Create")</p>
<p>@Html.ActionLink("Главная страница", "Index", "Home")</p>

<p>@Html.ActionLink("Админка", "Index")</p>