@model DataLayer.Resort

<div class="content_background">

    <strong>@Model.Name</strong>
    <table id="table" class="table table-bordered">
        <thead>

            <tr>
                <th>Фото</th>
                <th>Курорт</th>
                <th>Страна</th>


            </tr>
        </thead>

        <tbody>
            <tr>
                <td><img class="img-rounded" width="200px" height="200px" alt="@Model.Name" src="@Url.Action("GetImageResort", "Tour", new { Model.Id })" /></td>
                <td>
                    <strong>@Model.Name</strong>
                </td>
                <td>
                    <strong>
                        <a href="@Url.Action("CountryDetails", "Tour",
                                     new {id = Model.Country.Id })" target="_blank">
                            @Html.DisplayFor(modelItem => Model.Country.Name)
                        </a>
                    </strong>
                </td>

            </tr>

        </tbody>
    </table>
    <div>
        <p>
            @Html.Raw(Model.Description)
        </p>
    </div>

</div>
